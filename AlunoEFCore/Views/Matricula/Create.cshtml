@model AlunoTeste.Models.Matricula

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Matricula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Aluno" class="control-label"></label>
                <select asp-for="Aluno.Id" class="form-control">
                    @foreach (var aluno in ViewBag.viewModel.Alunos)
                    {
                        <option value="@aluno.Id" >@aluno.Nome</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Curso" class="control-label"></label>
                <select asp-for="Curso.Id" class="form-control">
                    @foreach (var curso in ViewBag.viewModel.Cursos)
                    {
                        <option value="@curso.Id">@curso.Titulo</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <select asp-for="Nota" class="form-control">
                    @foreach (var nota in ViewBag.viewModel.Notas)
                    {
                        <option>@nota</option>
                    }
                </select>
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
